@section Styles
    {
    <!-- DataTables -->
    <link href="~/assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
}
@{
    ViewData["Title"] = "Öğrenciler";
}
<h1>@ViewData["Title"]</h1>


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body" style="overflow:auto">

                <h4 class="card-title">Öğrenciler</h4>
                <button type="button" class="btn btn-success waves-effect waves-light" onclick="addStudent()" data-bs-toggle="modal" data-bs-target="#modalAdd">Yeni Öğrenci Ekle</button>
                <p class="card-title-desc">
                    Bu ekranda öğrencileri görüntüleyebilir ve düzenleyebilirsiniz.
                </p>
                <table id="dataTable" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th>Öğrenci Adı</th>
                            <th>Öğrenci Cinsiyeti</th>
                            <th>Öğrencinin   Sınıfları</th>
                            <th>Öğrenci Telefon Numarası</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>

    </div> <!-- end col -->
</div> <!-- end row -->



<div id="modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="myModalLabel">Yeni Öğrenci Ekle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <div class="mb-3 row">
                    <label for="example-text-input" class="col-md-4 col-form-label">Öğrenci Adı</label>
                    <div class="col-md-8">
                        <input class="form-control" type="text" placeholder="Öğrenci türü adını giriniz" id="txtStudentName">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="example-text-input" class="col-md-4 col-form-label">Öğrenci Cinsiyeti</label>
                    <div class="col-md-8">
                        <input class="form-control" type="text" placeholder="Öğrenci cinsiyeti seçiniz" id="txtStudentSex">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="example-text-input" class="col-md-4 col-form-label">Öğrencinin Sınıflarını Seçiniz</label>


                </div>



            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light waves-effect" data-bs-dismiss="modal">Kapat</button>
                <button type="button" id="btnAdd" class="btn btn-primary waves-effect waves-light">Ekle</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
@section Scripts{
    <script>

        function loadTable() {


            var dataTable = $("#dataTable").DataTable(
                {                                               /*Login olmus kullanıcının CLAIM'lerinden ID bilgisine ulasmak*/
                    ajax: "@Url.Action("GetAll","Vehicle")",
                    columns: [
                        {
                            data: 'profilePicture',
                            render: function (data, type) {
                                return `<center><img src="${data}" class="rounded-circle avatar-xl" alt="VehicleProfilePicture" width="130px" height="130px"></center> `;
                            }

                        },
                        { data: 'name' },
                        { data: 'slug' },
                        {
                            data: 'dateCreated',
                            render: function (data, type) {
                                var tarih = new Date(data).toLocaleDateString();
                                return tarih;
                            }
                        },
                        {
                            data: 'dateModified',
                            render: function (data, type) {
                                var tarih = new Date(data).toLocaleDateString();
                                return tarih;
                            }
                        },
                        {
                            data: 'id',
                            render: function (data, type) {
                                return `
                                                      <div class="row icon-demo-content">
                                                                        <div class="col-xl-1 col-lg-4 col-sm-6" style="margin: 0 2px"> <a id="btnDelete-${data}" onClick="deleteVehicle('${data}')"> <i class="uil-trash-alt" style="color:red"></i></a>  </div
                                                                                        ><div class="col-xl-1 col-lg-4 col-sm-6" style="margin: 0 2px">  <a onClick="editVehicle('${data}')"> <i class="fas fa-edit"  style="color:blue"></i> </a> </div>
                                                                                                    <div class="col-xl-1 col-lg-4 col-sm-6" style="margin: 0 2px"> <a href="VehiclePhoto/Index/?vehicleId=${data}">  <i class="fas fa-images" style="color:green"></i></a>  </div>
                                                                                                                            <div class="col-xl-1 col-lg-4 col-sm-6" style="margin: 0 2px"> <a href="VehicleVideo/Index/?vehicleId=${data}">  <i class="uil-play"></i> </a> </div></div>

                                                    `;
                            }
                        }

                    ]
                }
            );
            _dataTable = dataTable;
        }

    </script>
}