@model AssistantViewModel

<form method="post" asp-action="Edit" asp-controller="Assistant">
    <div class="form-group mb-3">
        <input asp-for="Assistant.FullName" class="form-control" value="@Model.Assistant.FullName" />
    </div>
    <div class="form-group mb-3">
        <select asp-for="Assistant.Sex" class="form-select">
            <option value="0">Belirtmek istemiyorum.</option>
            <option value="ERKEK">ERKEK</option>
            <option value="KADIN">KADIN</option>
        </select>
    </div>
    <input type="hidden" value="@Model.Assistant.Id" asp-for="@Model.Assistant.Id"></input>
    <div class="form-group mb-3">
        <input asp-for="Assistant.Email" class="form-control" value="@Model.Assistant.Email" />
    </div>
    <div class="form-group mb-3">
        <input asp-for="Assistant.Phone" class="form-control" value="@Model.Assistant.Phone" />
    </div>
    <div class="form-group mb-3">
        <select asp-for="@Model.Assistant.TeacherId" class="form-select" asp-items="@(new SelectList(Model.Teachers,nameof(Teacher.Id),nameof(Teacher.FullName)))">
            
        </select>
    </div>
    <div class="form-group mb-3 text-center">
        <button class="btn btn-primary btn-lg col-8" type="submit">Ekle</button>
    </div>
</form>